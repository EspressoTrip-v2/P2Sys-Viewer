{
  "name": "P2Sys-Viewer",
  "version": "1.0.3",
  "description": "P2Sys Viewer for P2Sys Main App",
  "main": "main.js",
  "scripts": {
    "dev": "NODE_ENV=dev electron .",
    "start": "electron .",
    "release": "electron-builder -w -p 'always'",
    "build": "electron-builder -w",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "bintray",
    "url": "https://bintray.com/espressotrip-v2/JDevSoftware/"
  },
  "author": "JDevSoftware",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^8.2.0",
    "electron-log": "^4.2.4",
    "electron-updater": "^4.3.4",
    "mongoose": "^5.10.0"
  },
  "build": {
    "appId": "com.JDevSoftware.P2Sys-Viewer",
    "copyright": "Copyright Â© 2020 P2Sys-Viewer",
    "publish": {
      "provider": "bintray",
      "package": "P2Sys-Viewer",
      "owner": "espressotrip-v2",
      "repo": "JDevSoftware",
      "url": "https://bintray.com/espressotrip-v2/JDevSoftware/",
      "token": "d11c8a929df2d2257c311fc939cdc35d7f4007ca"
    },
    "electronUpdaterCompatibility": ">= 2.16",
    "files": [
      "!private**/*",
      "!build**/*"
    ],
    "extraFiles": [
      "./.env"
    ],
    "win": {
      "publisherName": "JDevSoftware",
      "verifyUpdateCodeSignature": false,
      "certificateFile": "private/JDevSoftware.pfx",
      "certificatePassword": "Juan@198103",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerSidebar": "./build/installerSidebar.bmp",
      "uninstallerSidebar": "./build/uninstallerSidebar.bmp",
      "installerHeaderIcon": "./build/installerHeaderIcon.ico"
    }
  },
  "devDependencies": {
    "electron": "^9.1.0"
  }
}
