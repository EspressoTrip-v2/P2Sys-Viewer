{
  "name": "P2Sys-Viewer",
  "version": "1.0.0",
  "description": "P2Sys Viewer for P2Sys Main App",
  "main": "main.js",
  "scripts": {
    "watch": "nodemon --ignore '*.json' --exec NODE_ENV=dev electron .",
    "dev": " NODE_ENV=dev electron .",
    "start": "electron .",
    "release": "electron-builder -wl -p OnTagOrDraft",
    "build": "electron-builder -w",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": "https://github.com/EspressoTrip-v2/P2Sys-Viewer",
  "author": "JBDevSoftware",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^8.2.0",
    "mongoose": "^5.10.0"
  },
  "build": {
    "appId": "com.JBDevSoftware.P2Sys_()",
    "copyright": "Copyright Â© 2020 ${name}",
    "files": [
      "!**/private?**/*",
      "!**/build**/*"
    ],
    "extraFiles": [
      "./.env"
    ],
    "win": {
      "publisherName": "${name}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerSidebar": "./build/installerSidebar.bmp",
      "uninstallerSidebar": "./build/uninstallerSidebar.bmp",
      "installerHeaderIcon": "./build/installerHeaderIcon.ico",
      "installerHeader": "./build/installerHeader.bmp"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  },
  "devDependencies": {
    "electron": "^9.1.0"
  }
}
